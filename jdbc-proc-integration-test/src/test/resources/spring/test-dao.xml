<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="daoMethodInfoFactory" class="com.googlecode.jdbcproc.daofactory.DaoMethodInfoFactory">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="companyDao" class="com.googlecode.jdbcproc.daofactory.StoredProcedureDaoFactoryBean">
        <property name="interface" value="com.googlecode.jdbcproc.daofactory.it.testdao.ICompanyDao"/>
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
        <property name="daoMethodInfoFactory" ref="daoMethodInfoFactory"/>
    </bean>

</beans>

